{% trans_default_domain 'adminInterface' %}

{% include '@NfqAdmin/_form/_form_delete.html.twig' with {'form': deleteForm|default(false), 'forceConfirm': true} only %}

{{ form_start(form) }}

<input type="hidden" name="submitLocale" value="{{ locale }}" />

{% include '@NfqAdmin/_form/_form_submit.html.twig' with {'form': form} only %}

<div class="row">
    <div class="col-lg-8">
        <div id="accordion-{{ locale }}" class="panel-group accordion-container">
            {% block header_panels %}{% endblock %}

            {% block main_information %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion-{{ locale }}"
                               href="#main-information-{{ locale }}">
                                {{ 'admin.cms.main_information'|trans }}
                            </a>
                        </h4>
                    </div>

                    <div id="main-information-{{ locale }}" class="panel-collapse in">
                        <div class="panel-body">
                            {% include '@NfqCmsPage/admin/cms_page/_blocks/main.html.twig' %}
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block place_settings %}
                {% if form.places_config is defined %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion-{{ locale }}"
                                   href="#place-settings-{{ locale }}">{{ 'admin.cms.place_settings'|trans }}</a>
                            </h4>
                        </div>

                        <div id="place-settings-{{ locale }}" class="panel-collapse collapse collapse">
                            <div class="panel-body">
                                {% include '@NfqCmsPage/admin/cms_page/_blocks/place.html.twig' %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}

            {% block footer_panels %}{% endblock %}
        </div>
        <br/>
    </div>
    <div class="col-lg-4">
        {% block featured_image %}
            {% include '@NfqCmsPage/admin/cms_page/_blocks/featured_image.html.twig' %}
        {% endblock %}
    </div>
</div>

<br />

{% if form.text_mce is defined %}
    <div class="col-lg-12">
        <div class="form-group">
            {{ form_widget(form.text_mce) }}
        </div>
    </div>
{% endif %}

{{ form_end(form) }}
